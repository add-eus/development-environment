{
    "tsCheckerConfig": {
        "eslint": {
            "enabled": true,
            "files": "./**.{ts,tsx,js}",
            "memoryLimit": 8192
        },
        "typescript": {
            "memoryLimit": 8192
        }
    },
    "compilerOptions": {
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noImplicitReturns": false,
        "noUnusedLocals": false,

        "lib": ["esnext", "es2021"],
        "module": "commonjs",
        "moduleResolution": "node",
        
        "outDir": "out",
        "sourceMap": true,
        "typeRoots": ["node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "target": "ES2021",
        "resolveJsonModule": true,
        "removeComments": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": ["src", "bin", "lib", "index.ts"]
}
